# Task Agent - Planner LLM Configuration
# =======================================
# 用于任务规划的 LLM 配置

# LLM Provider: openai, azure_openai, vllm, ollama, anthropic, custom
LLM_PROVIDER=openai

# Model name - 规划任务推荐使用更强的推理模型
LLM_MODEL=gpt-4o

# API Configuration
LLM_API_KEY=your_api_key_here
LLM_API_BASE=https://api.openai.com/v1

# Generation Parameters - 规划需要一定创造性
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TOP_P=1.0

# Request Settings
LLM_TIMEOUT=60.0
LLM_MAX_RETRIES=3
